<mui:NavigationPage x:Class="SimulationPTSystem.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimulationPTSystem.Views"
      xmlns:mui="clr-namespace:LinnerToolkit.Desktop.ModernUI.Windows.Controls;assembly=LinnerToolkit.Desktop.ModernUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button Content="开始读取屏幕" HorizontalAlignment="Left" Margin="335,260,0,0" VerticalAlignment="Top" Width="75" Command="{Binding StartCommand}"/>
        <Button Content="停止读取屏幕" HorizontalAlignment="Left" Margin="508,260,0,0" VerticalAlignment="Top" Width="75" Command="{Binding StopCommand}"/>
        <Button Content="跳转SecondPage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Command="{Binding NavigateToSecondPageCommand}" Margin="335,106,0,0" Height="36"/>
    </Grid>
</mui:NavigationPage>
